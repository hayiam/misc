#!/bin/bash
# The script allows to use google-chrome from dmenu or cli; usage: g - open site or use google search; g -y - search with yandex; g -e - search in english wikipedia; g -r - search in russian wikipedia.
while getopts y:e:r flag
    do
        case "${flag}" in
            y) SearchEngine="https://yandex.ru/search/?text=";;
            e) SearchEngine="https://en.wikipedia.org/wiki/Special:Search?search=";;
            r) SearchEngine="https://ru.wikipedia.org/wiki/Special:Search?search=";;
        esac
    done

AllArgs=$@

if [ -z "$SearchEngine" ] && [[ "$@" =~ \ |\' ]] || [[ "$@" != *.* ]]
    then
    SearchEngine="https://www.google.com/search?q="
elif (( $# >= 2 ))
then
    shift
    AllArgs=$@
fi

Sargs=$SearchEngine$AllArgs

google-chrome-stable --kiosk --new-window "$Sargs"
